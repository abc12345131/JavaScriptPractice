{
    "include": ["./src/**/*"],
    "exclude": ["./node_modules/**/*"],
    "compilerOptions": {
        "target":"es5",
        "module": "es6",
        //"lib":[],
        "outDir":"./dist",
        //"outFile": "./dist/app.js",
        "allowJs":true,
        "checkJs":true,
        "removeComments":false,
        "noEmit":false,
        "noEmitOnError":true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strict": true,
        "jsx": "react",
        "moduleResolution": "node",
    }

}